<!--Main layout-->
<main style="margin-top: 58px;">
  <div class="container pt-4">
    <h1 style="text-align: center;">New Post</h1>
    <div class="btn-toolbar">
      <div class="btn-group mr-2">
        <button class="btn btn-secondary"><b>B</b></button>
        <button class="btn btn-secondary"><i>I</i></button>
        <button class="btn btn-secondary"><u>U</u></button>
      </div>
      <div class="btn-group mr-2">
        <div class="form-outline">
          <input
            id="font-size-input"
            type="number"
            class="form-control"
            style="width:120px"
          />
          <label class="form-label" for="form12">Font-size</label>
        </div>
      </div>
    </div>
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        <input
          type="text"
          class="form-control"
          id="title"
          placeholder="Enter title:"
        />
      </div>
      <div class="form-outline">
        <textarea class="form-control" id="textAreaContent" rows="4"></textarea>
        <label class="form-label" for="textAreaContent">Main Content</label>
      </div>
      <div class="form-group">
        <label for="attachment">Attachment:</label>
        <input type="file" class="form-control-file" id="attachment" />
      </div>
      <div class="form-group">
        <label for="select-input">Select type:</label>
        <select class="form-control" id="select-input">
          <option value="SciTech">Science & Technology</option>
          <option value="SocialLife">Social Life</option>
          <option value="Intellectuals">Intellectuals</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Gá»­i</button>
    </form>
  </div>
</main>