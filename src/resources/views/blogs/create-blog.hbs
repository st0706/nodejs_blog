<!--Main layout-->
<main style="margin-top: 58px;">
    <div class="container pt-4">
        <h1 style="text-align: center;">New Post</h1>
        <form action="/blogs/stored" method="POST">
            <div class="btn-toolbar">
                <div class="btn-group mr-2">
                    <div class="form-check form-check-inline">
                        <input name="font-style" class="form-check-input" type="checkbox" id="inlineCheckbox1"
                            value="B">
                        <label class="form-check-label" for="inlineCheckbox1">B</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input name="font-style" class="form-check-input" type="checkbox" id="inlineCheckbox2"
                            value="U">
                        <label class="form-check-label" for="inlineCheckbox2">U</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input name="font-style" class="form-check-input" type="checkbox" id="inlineCheckbox2"
                            value="I">
                        <label class="form-check-label" for="inlineCheckbox2">I</label>
                    </div>
                </div>
                <div class="btn-group mr-2">
                    <div class="form-outline">
                        <input name="font-size" id="font-size-input" type="number" class="form-control"
                            style="width:120px" />
                        <label class="form-label" for="form12">Font-size</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="title">Title:</label>
                <input name="title" type="text" class="form-control" id="title" placeholder="Enter title:" />
            </div>
            <div class="form-outline">
                <textarea name="content" class="form-control" id="textAreaContent" rows="4"></textarea>
                <label class="form-label" for="textAreaContent">Main Content</label>
            </div>
            <div class="form-group">
                <label for="attachment">Attachment:</label>
                <input name="attachment" type="file" class="form-control-file" id="attachment" />
            </div>
            <div class="form-group">
                <label for="select-input">Select type:</label>
                <select class="form-control" id="select-input">
                    <option name="content-type" value="SciTech">Science & Technology</option>
                    <option name="content-type" value="SocialLife">Social Life</option>
                    <option name="content-type" value="Intellectuals">Intellectuals</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Gá»­i</button>
        </form>
    </div>
</main>