<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto" style="width: 85%;">
      <div class="card">
        <div class="card-body">
          <h4>Tác giả: {{blog.author.username}}</h4>
          <h5 class="card-title">{{blog.blogName}}</h5>
          <img src="{{blog.blogImage}}" alt="">
          <p class="card-text">{{blog.blogInfo}}</p>
        </div>
      </div>
      <div class="mt-3">
        <button type="button" class="btn btn-primary mr-2 like-button">
          <i class="fas fa-thumbs-up"></i> Like
          <span class="badge badge-light ml-1 like-count">0</span>
        </button>
        <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#comment-section">
          <i class="fas fa-comment"></i> Bình luận
        </button>
      </div>
      <div id="comment-section" class="collapse mt-3">
        <div class="card">
          <div class="card-body">
            <form class="write-cmt" method="POST" action="/blogs/write-comment">
              <div class="form-group">
                <input type="hidden" name="blogSlug" value="{{blog.slug}}">
                <label for="comment">Bình luận:</label>
                <textarea name="comment" class="form-control" id="comment" rows="3"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Gửi</button>
            </form>
          </div>
        </div>
        <div class="card mt-3">
          <div class="card-body">
            <h5 class="card-title">Bình luận</h5>
            <hr>
            {{#each comments}}
            <div class="media">
              <img src="{{this.user.avatar}}" class="mr-3" alt="..." style="height: 40px; width: 40px">
              <div class="media-body">
                <h5 class="mt-0">{{this.user.username}}</h5>
                {{this.content}}
              </div>
            </div>
            <hr>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Pagination -->
